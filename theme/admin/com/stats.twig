    <div class="widget-group" style="margin: 25px 0;">
        <div class="widget">
            <header>{{ 'admin.statistic.views'|lang }}</header>
            <strong class="number">{{ stat.views }}</strong>
        </div>
        <div class="widget">
            <header>{{ 'admin.statistic.visits'|lang }}</header>
            <strong class="number">{{ stat.visits }}</strong>
        </div>
        <div class="widget">
            <header>{{ 'admin.statistic.online'|lang }}</header>
            <strong class="number green">
                {{ stat.online }}
            </strong>
        </div>
    </div>

    <div class="widget-group">
        <header>{{ month }} {{ ''|date('Y') }}</header>
        <table class="calendar">
            <thead>
            <tr>
                {% for i in 0..6 %}
                    <td>{{ ('system.week.' ~ i ) |lang }}</td>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for w in calendar %}
                <tr>
                    {% for d in w %}
                        <td onclick="gui.go('{{ 'stats'|url(d) }}')"{% if not d %} class="empty"{% endif %}>
                            <strong class="number{% if d == active %} active{% endif %}">{{ d }}</strong>
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

