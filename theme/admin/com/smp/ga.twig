{% extends 'base.twig' %}
{% block body %}
    <div>
        <menu>
            <a href="{{ 'smp'|url }}" class="item">
                <i class="fa fa-arrow-left"></i>
                {{ 'admin.smp.title'|lang }}
            </a>
            <nav class="right">
            </nav>
        </menu>

        {% if message %}
        <div class="message">{{ message }}</div>
        {% endif %}
        <form action="{{ 'smpp'|url('ga') }}" method="get" class="form">
            <div class="message info center">{{ 'admin.smp.ga_integration'|lang|raw }}</div>

            <label for="ga_id">
                <span class="title">{{ 'admin.smp.analytics_id'|lang }}</span>
                <input type="password" name="id" id="ga_id" value="{{ network.data.id }}" placeholder="{{ 'admin.smp.analytics_id'|lang }}" />
            </label>

            <footer>
                <button type="submit" class="button">{{ 'button.save'|lang }}</button>
            </footer>
        </form>

    </div>
{% endblock %}