{% extends '@admin/base.twig' %}
{% block head %}
    <script type="text/javascript" src="{{ 'users.js'|local('js') }}"></script>
{% endblock %}

{% block body %}
    <menu>
        <a href="{{ 'users'|url }}" class="item">
            <i class="fa fa-arrow-left"></i>
            {{ 'button.cancel'|lang }}
        </a>

        <nav class="right">
            <a href="javascript:void(0);" onclick="createUser('.create')" class="item">
                <i class="fa fa-save"></i> {{ 'button.save'|lang }}
            </a>
        </nav>
    </menu>

    <form class="form create" action="">
        <header>{{ 'user.create'|lang }}</header>
        <div id="create" class="message" style="display: none;"></div>
        <label for="username">
            <span class="title">{{ 'user.profile.username'|lang }}</span>
            <input id="username" name="username" type="text" value=""/>
        </label>
        <label for="email">
            <span class="title">{{ 'user.profile.email'|lang }}</span>
            <input id="email" name="email" type="text" value=""/>
        </label>
        <label for="password">
            <span class="title">{{ 'user.profile.password'|lang }}</span>
            <input id="password" name="password" type="text" value=""/>
        </label>
        <label for="group">
            <span class="title">{{ 'user.profile.group'|lang }}</span>
            <span class="cselect">
                <select name="group" id="group" data-width="200">
                    {% for group in groups %}
                        <option {% if group.id == 1 %}selected="selected" {% endif %}value="{{ group.id }}">{{ group.name }}</option>
                    {% endfor %}
                </select>
            </span>
        </label>
    </form>
{% endblock %}