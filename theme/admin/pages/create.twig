{% extends 'base.twig' %}
{% block head %}
    <script type="text/javascript" src="{{ 'editor.js'|local('js') }}"></script>
    <script type="text/javascript">
        function submit()
        {
            var data = {
                'content': content.content(),
                'title': title.content(),
                'slug': $('#slug').val()
            };

            $.post('{{ 'page.new'|url }}?id={{ page.id }}', data, function(r){
                $('.message').text(r.message).slideDown();
                setTimeout(function(){
                    document.location = '{{ 'list'|url }}';
                }, 2000)
            });
        }

        function remove_page()
        {
            var data = {
                'remove': '{{ page.id }}'
            };

            $.post('{{ 'page.edit'|url }}', data, function(r){
                console.log(r);
            });
        }

        $(function(){
            title = new WyEdit($('#title'));
            content = new WyEdit($('#wy-edit'));
        });
    </script>
{% endblock %}
{% block body %}
    <menu>
        <a class="item" href="#" onclick="submit();">
            <i class="fa fa-save"></i>
            {{ 'button.save'|lang }}
        </a>
        {% if page.id %}
            <a class="item" href="{{ 'list'|url }}?delete={{ page.id }}">
                <i class="fa fa-trash"></i>
                {{ 'button.delete'|lang }}
            </a>
            <a class="item" href="/page/{{ page.id }}-{{ page.slug }}.html" target="_blank">
                <i class="fa fa-eye"></i>
                {{ 'page.view'|lang }}
            </a>
        {% endif %}

        <nav class="right">
            <a class="item" href="{{ 'list'|url }}">
                <i class="fa fa-arrow-right"></i>
                {{ 'button.cancel'|lang }}
            </a>
        </nav>
    </menu>

    <div class="message success" style="display: none;"></div>

    <h1 id="title" onblur="if ($(this).text().trim().length < 1) $(this).text('{{ 'page.name'|lang }}');">
        {{ page.title|raw }}
    </h1>

    <div class="form">
        <label for="slug">
            <input title="{{ 'page.slug'|lang }}" class="wide" type="text" value="{{ page.slug }}" id="slug"/>
        </label>
    </div>

    {% set wyi='content' %}
    {% set content=page.content %}
    {% include 'com/editor.twig' %}
{% endblock %}
