{% extends 'base.twig' %}

{% block body %}
    <menu>
        <a href="{{ 'page.new'|url }}" class="item">
            <i class="fa fa-plus"></i>
            {{ 'page.create'|lang }}
        </a>

        <nav class="right">
            {% for l in listing %}
                <a class="item{% if page == l %} active{% endif %}" href="?page={{ l }}">{{ l }}</a>
            {% endfor %}
        </nav>
    </menu>

    {% if message %}
        <div class="message">
            {{ message }}
        </div>
    {% endif %}

    <table>
        <thead>
            <tr>
                <td class="primary">ID</td>
                <td>{{ 'page.name'|lang }}</td>
                <td>{{ 'page.slug'|lang }}</td>
                <td>{{ 'page.author'|lang }}</td>
                <td>{{ 'page.created'|lang }}</td>
                <td>{{ 'page.updated'|lang }}</td>
                <td>{{ 'page'|lang }}</td>
            </tr>
        </thead>
        <tbody>
        {% if not pages_list %}
            <tr>
                <td colspan="6" class="message">
                    <div>{{ 'form.empty'|lang }}</div>
                </td>
            </tr>
        {% endif %}
        {% for page in pages_list %}
            <tr>
                <td onclick="gui.go('{{ 'page.edit'|url(page.id) }}')" class="primary">#{{ page.id }}</td>
                <td onclick="gui.go('/page/{{ page.id }}-{{ page.slug }}.html')">{{ page.title }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.author.username }}</td>
                <td>{{ page.created_at|tz|dlang }}</td>
                <td>{{ page.updated_at|tz|dlang }}</td>
                <td onclick="gui.go('?delete={{ page.id }}')">
                    <span class="button">
                        <i class="fa fa-trash"></i> {{ 'button.delete'|lang }}
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td class="primary">ID</td>
                <td>{{ 'page.name'|lang }}</td>
                <td>{{ 'page.slug'|lang }}</td>
                <td>{{ 'page.author'|lang }}</td>
                <td>{{ 'page.created'|lang }}</td>
                <td>{{ 'page.updated'|lang }}</td>
                <td>{{ 'page'|lang }}</td>
            </tr>
        </tfoot>
    </table>

    <menu>
        <a href="{{ 'page.new'|url }}" class="item">
            <i class="fa fa-plus"></i>
            {{ 'page.create'|lang }}
        </a>

        <nav class="right">
            {% for l in listing %}
                <a class="item{% if page == l %} active{% endif %}" href="?page={{ l }}">{{ l }}</a>
            {% endfor %}
        </nav>
    </menu>
{% endblock %}
