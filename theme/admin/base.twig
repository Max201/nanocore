<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>{% block title %}{% if title %}{{ title }}{% else %}{{ 'admin.name'|lang }}{% endif %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ 'custom.css'|local('css') }}"/>
    <script type="text/javascript" src="{{ 'jquery.js'|local('js') }}" charset="UTF-8"></script>
    <script type="text/javascript" src="{{ 'cselect.js'|local('js') }}" charset="UTF-8"></script>
    <script type="text/javascript" src="{{ 'webgui.js'|local('js') }}"></script>
    {% block head %}{% endblock %}
</head>
<body>
    <section id="wrapper">
        <section id="main-menu">
            <a href="#" id="logo">
                <span class="preloader">N</span>ano Core
            </a>

            <a href="#" class="right">
                <i class="fa fa-power-off"></i>
            </a>

            <a href="#" class="right">
                <i class="fa fa-user"></i>
                {{ user.username }}
            </a>

            <a href="/admin/settings/" title="{{ 'admin.settings'|lang }}" class="right">
                <i class="fa fa-cog"></i>
            </a>

            <a href="/admin/" title="{{ 'admin.bug'|lang }}" class="right">
                <i class="fa fa-bug"></i>
            </a>

            <a href="/admin/services/" title="{{ 'admin.services'|lang }}" class="right">
                <i class="fa fa-bolt"></i>
            </a>

            <a href="/admin/modules/" title="{{ 'admin.modules'|lang }}" class="right">
                <i class="fa fa-cubes"></i>
            </a>

            <a href="/admin/" title="{{ 'admin.dashboard'|lang }}" class="right">
                <i class="fa fa-dashboard"></i>
            </a>
        </section>

        <section id="container">
            <!--Navigation bar-->
            <nav id="main-context">
                {% for group in menu|keys %}
                    <header>
                        <i class="fa fa-{{ menu[group]['$icon'] }}"></i>
                        {{ group }}
                    </header>

                    {% for title in menu[group]|keys %}
                        {% if title not in '$icon' %}
                        <a href="{{ menu[group][title] }}">{{ title }}</a>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </nav>

            <!--Content box-->
            <main class="content-wrapper">
                <section id="content">
                        <header>
                            {% block header %}{% if header %}{{ header }}{% else %}{{ title }}{% endif %}{% endblock %}
                        </header>
                        {% block body %}{{ content }}{% endblock %}
                </section>
            </main>
        </section>
    </section>
</body>
</html>