{% extends 'index.twig' %}

{% block body %}
    {% if not posts %}
        <div class="message info">
            Нет записей
        </div>
    {% endif %}
    {% for post in posts %}
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img src="{{ post.author|avatar }}" alt="{{ post.author.username }}"/>
                </a>

                <span class="rating center">{{ post.author.rating }}</span>
            </div>
            <div class="media-body">
                <h4 class="media-heading">
                    <a href="{{ 'post'|url(post.id, post.slug) }}">{{ post.title }}</a>
                </h4>

                {{ post.content|short|raw }}

                <div class="info">
                    {{ post.updated_at|tz|dlang }} |
                    <strong>{{ post.views }}</strong> Просмотров |
                    <a target="_blank" href="{{ 'category'|url(post.category_id) }}">#{{ post.category.title }}</a>
                    <span class="pull-right">{{ ('publ'~post.id)|comments_count }} Комментариев</span>
                </div>
            </div>
        </div>
    {% endfor %}

    {% include 'paging.twig' %}
{% endblock %}