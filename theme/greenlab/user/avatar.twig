{% extends 'index.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-warning">
            {{ error }}
        </div>
    {% endif %}
    {% if message %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endif %}
    <form action="" method="post" enctype="multipart/form-data">
        <section class="form-body">
            <label for="avatar" class="avatar">
            {% if user.avatar %}
                <img class="avatar center" src="{{ user.avatar }}" alt="{{ user.username }}"/>
            {% else %}
                <img class="avatar center" src="{{ user|grava(160) }}" alt="{{ user.username }}"/>
            {% endif %}
            </label>
            <p class="help-block text-center">Нажмите на изображение и выберите новое</p>
            <input style="display: none;" id="avatar" type="file" name="avatar">
        </section>
        <footer class="panel">
            <a class="notice" href="?delete=1">{{ 'button.delete'|lang }}</a>
            <button type="submit" class="btn btn-default pull-right">{{ 'button.save'|lang }}</button>
        </footer>
    </form>
{% endblock %}