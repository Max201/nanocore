{% extends 'index.twig' %}

{% block body %}
    <div class="content">
        {% for post in posts %}
            <div class="entry-item">
                <h3><a href="{{ 'post'|url(post.id, post.slug) }}">{{ post.title }}</a></h3>
                <p class="post-info">
                    <small>Автор: {{ post.author.username }}</small> /
                    <small>Опубликовано: {{ post.updated_at|tz|dlang }}</small> /
                    <small>Категория: <a href="{{ 'category'|url(post.category_id) }}">{{ post.category.title }}</a></small>
                </p>
                <div class="post-short">{{ post.content|short|raw }}</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}