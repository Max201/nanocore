{% extends 'index.twig' %}

{% block body %}
    {% if errors %}
        <ul>
            {% for msg in errors %}
            <li>{{ msg }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <form action="" method="post">
        <section class="form-body">
            <input type="text" name="username" value="{{ data.username }}" placeholder="{{ 'user.profile.username'|lang }}">
            <input type="password" name="password" value="{{ data.password }}" placeholder="{{ 'user.profile.password'|lang }}">
        </section>
        <footer>
            <a href="{{ 'user.new'|url }}" class="notice">{{ 'user.registration.not_registered'|lang }}</a>
            <button type="submit" class="button">{{ 'user.auth.login'|lang }}</button>
        </footer>
    </form>
{% endblock %}